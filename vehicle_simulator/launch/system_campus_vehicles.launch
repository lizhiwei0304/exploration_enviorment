<?xml version="1.0"?>
<launch>

  <arg name="namespace_1" default="vehicle0" />
  <arg name="vehicleX1" default="0" />
  <arg name="vehicleY1" default="0" />
  <arg name="terrainZ1" default="0" />
  <arg name="vehicleYaw1" default="0" />

  <arg name="namespace_2" default="vehicle1" />
  <arg name="vehicleX2" default="0" />
  <arg name="vehicleY2" default="3.0" />
  <arg name="terrainZ2" default="0" />
  <arg name="vehicleYaw2" default="0" />

  <arg name="namespace_3" default="vehicle2" />
  <arg name="vehicleX3" default="0" />
  <arg name="vehicleY3" default="6.0" />
  <arg name="terrainZ3" default="0" />
  <arg name="vehicleYaw3" default="0" />

  <arg name="world_name" default="campus" />
  <arg name="cameraOffsetZ" default="0" />
  <arg name="checkTerrainConn" default="true" />
  <arg name="vehicleHeight" default="0.75" />


  <group ns="$(arg namespace_1)">

    <param name="camera_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/camera.urdf.xacro'" />
    <param name="lidar_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/lidar.urdf.xacro'" />
    <param name="robot_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/robot.urdf.xacro'" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_camera"
      args="-urdf -param /$(arg namespace_1)/camera_description -model $(arg namespace_1)/camera" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar"
      args="-urdf -param /$(arg namespace_1)/lidar_description -model $(arg namespace_1)/lidar" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot"
      args="-urdf -param /$(arg namespace_1)/robot_description -model $(arg namespace_1)/robot" />

    <include file="$(find local_planner)/launch/local_planner.launch">
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="goalX" value="$(arg vehicleX1)" />
      <arg name="goalY" value="$(arg vehicleY1)" />
      <arg name="sensor_frame" default="$(arg namespace_1)/sensor" />
      <arg name="vehicle_frame" default="$(arg namespace_1)/vehicle" />
      <arg name="camera_frame" default="$(arg namespace_1)/camera" />
    </include>

    <include file="$(find terrain_analysis)/launch/terrain_analysis.launch" />

    <include file="$(find terrain_analysis_ext)/launch/terrain_analysis_ext.launch">
      <arg name="checkTerrainConn" value="$(arg checkTerrainConn)" />
    </include>

    <include file="$(find vehicle_simulator)/launch/vehicle_simulator.launch">
      <arg name="namespace" value="$(arg namespace_1)" />
      <arg name="vehicleHeight" value="$(arg vehicleHeight)" />
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="vehicleX" value="$(arg vehicleX1)" />
      <arg name="vehicleY" value="$(arg vehicleY1)" />
      <arg name="terrainZ" value="$(arg terrainZ1)" />
      <arg name="vehicleYaw" value="$(arg vehicleYaw1)" />
      <arg name="sensor_frame" value="$(arg namespace_1)/sensor" />
      <arg name="robot_model_name" value="$(arg namespace_1)/robot" />
      <arg name="camera_model_name" value="$(arg namespace_1)/camera" />
      <arg name="lidar_model_name" value="$(arg namespace_1)/lidar" />
    </include>

    <include file="$(find sensor_scan_generation)/launch/sensor_scan_generation.launch">
      <arg name="sensor_scan_frame" value="$(arg namespace_1)/sensor_at_scan" />
    </include>

    <include file="$(find visualization_tools)/launch/visualization_tools.launch">
      <arg name="world_name" value="$(arg world_name)" />
    </include>

    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizGA"
      args="-d $(find vehicle_simulator)/rviz/$(arg namespace_1).rviz" respawn="true" />

  </group>


  <group ns="$(arg namespace_2)">

    <param name="camera_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/camera.urdf.xacro'" />
    <param name="lidar_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/lidar.urdf.xacro'" />
    <param name="robot_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/robot.urdf.xacro'" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_camera"
      args="-urdf -param /$(arg namespace_2)/camera_description -model $(arg namespace_2)/camera -y 3.0" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar"
      args="-urdf -param /$(arg namespace_2)/lidar_description -model $(arg namespace_2)/lidar -y 3.0" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot"
      args="-urdf -param /$(arg namespace_2)/robot_description -model $(arg namespace_2)/robot -y 3.0" />

    <include file="$(find local_planner)/launch/local_planner.launch">
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="goalX" value="$(arg vehicleX2)" />
      <arg name="goalY" value="$(arg vehicleY2)" />
      <arg name="sensor_frame" default="$(arg namespace_2)/sensor" />
      <arg name="vehicle_frame" default="$(arg namespace_2)/vehicle" />
      <arg name="camera_frame" default="$(arg namespace_2)/camera" />
    </include>

    <include file="$(find terrain_analysis)/launch/terrain_analysis.launch" />

    <include file="$(find terrain_analysis_ext)/launch/terrain_analysis_ext.launch">
      <arg name="checkTerrainConn" value="$(arg checkTerrainConn)" />
    </include>

    <include file="$(find vehicle_simulator)/launch/vehicle_simulator.launch">
      <arg name="namespace" value="$(arg namespace_2)" />
      <arg name="vehicleHeight" value="$(arg vehicleHeight)" />
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="vehicleX" value="$(arg vehicleX2)" />
      <arg name="vehicleY" value="$(arg vehicleY2)" />
      <arg name="terrainZ" value="$(arg terrainZ2)" />
      <arg name="vehicleYaw" value="$(arg vehicleYaw2)" />
      <arg name="sensor_frame" value="$(arg namespace_2)/sensor" />
      <arg name="robot_model_name" value="$(arg namespace_2)/robot" />
      <arg name="camera_model_name" value="$(arg namespace_2)/camera" />
      <arg name="lidar_model_name" value="$(arg namespace_2)/lidar" />
    </include>

    <include file="$(find sensor_scan_generation)/launch/sensor_scan_generation.launch">
      <arg name="sensor_scan_frame" value="$(arg namespace_2)/sensor_at_scan" />
    </include>

    <include file="$(find visualization_tools)/launch/visualization_tools.launch">
      <arg name="world_name" value="$(arg world_name)" />
    </include>

    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizGA"
      args="-d $(find vehicle_simulator)/rviz/$(arg namespace_2).rviz" respawn="true" />

  </group>


  <group ns="$(arg namespace_3)">

    <param name="camera_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/camera.urdf.xacro'" />
    <param name="lidar_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/lidar.urdf.xacro'" />
    <param name="robot_description"
      command="$(find xacro)/xacro --inorder '$(find vehicle_simulator)/urdf/robot.urdf.xacro'" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_camera"
      args="-urdf -param /$(arg namespace_3)/camera_description -model $(arg namespace_3)/camera -y 6.0" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_lidar"
      args="-urdf -param /$(arg namespace_3)/lidar_description -model $(arg namespace_3)/lidar -y 6.0" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_robot"
      args="-urdf -param /$(arg namespace_3)/robot_description -model $(arg namespace_3)/robot -y 6.0" />

    <include file="$(find local_planner)/launch/local_planner.launch">
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="goalX" value="$(arg vehicleX3)" />
      <arg name="goalY" value="$(arg vehicleY3)" />
      <arg name="sensor_frame" default="$(arg namespace_3)/sensor" />
      <arg name="vehicle_frame" default="$(arg namespace_3)/vehicle" />
      <arg name="camera_frame" default="$(arg namespace_3)/camera" />
    </include>

    <include file="$(find terrain_analysis)/launch/terrain_analysis.launch" />

    <include file="$(find terrain_analysis_ext)/launch/terrain_analysis_ext.launch">
      <arg name="checkTerrainConn" value="$(arg checkTerrainConn)" />
    </include>

    <include file="$(find vehicle_simulator)/launch/vehicle_simulator.launch">
      <arg name="namespace" value="$(arg namespace_3)" />
      <arg name="vehicleHeight" value="$(arg vehicleHeight)" />
      <arg name="cameraOffsetZ" value="$(arg cameraOffsetZ)" />
      <arg name="vehicleX" value="$(arg vehicleX3)" />
      <arg name="vehicleY" value="$(arg vehicleY3)" />
      <arg name="terrainZ" value="$(arg terrainZ3)" />
      <arg name="vehicleYaw" value="$(arg vehicleYaw3)" />
      <arg name="sensor_frame" value="$(arg namespace_3)/sensor" />
      <arg name="robot_model_name" value="$(arg namespace_3)/robot" />
      <arg name="camera_model_name" value="$(arg namespace_3)/camera" />
      <arg name="lidar_model_name" value="$(arg namespace_3)/lidar" />
    </include>

    <include file="$(find sensor_scan_generation)/launch/sensor_scan_generation.launch">
      <arg name="sensor_scan_frame" value="$(arg namespace_3)/sensor_at_scan" />
    </include>

    <include file="$(find visualization_tools)/launch/visualization_tools.launch">
      <arg name="world_name" value="$(arg world_name)" />
    </include>

    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rvizGA"
      args="-d $(find vehicle_simulator)/rviz/$(arg namespace_3).rviz" respawn="true" />

  </group>
</launch>